    		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true, defaults: { label: false, input_html: { class: 'input-block-level' } } ) do |f| %>
				  <%= devise_error_messages! %>
				  <div class="row">
				  	<div class="span2">
				  		<%= f.input :first_name, :autofocus => true, placeholder: 'First Name' %>
				  	</div>
				  	<div class="span2">
				  		<%= f.input :last_name, placeholder: 'Last Name' %>
				  	</div>
				  </div>
				  <%= f.input :email, placeholder: 'Email' %>
				  <%= f.input :password, placeholder: 'Password' %>
				  <%= f.input :password_confirmation, placeholder: 'Password Confirmation' %>

				  <%= f.button :submit, "Sign up", class: 'btn btn-large btn-success' %> or <%= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook) %>
				<% end %>
    	</div>
    </div>
  </div>
</div>
