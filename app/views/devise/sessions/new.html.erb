<div class="form-signin">
	<h2>Sign in</h2>
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), defaults: { label: false, input_html: { class: 'input-block-level' } } ) do |f| %>
	  <%= f.input :email, label: false, :autofocus => true, placeholder: 'Email' %>
	  <%= f.input :password, label: false, placeholder: 'Password' %>

	  <% if devise_mapping.rememberable? %>
		  <div class="pull-right">
		    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
		  </div>
	  <% end %>

	  <%= f.button :submit, "Sign in", class: 'btn' %>
	<% end %>
</div>
<%= render "devise/shared/links" %>