<%= form_for @event, :html => {:multipart => true} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :creator_id %><br />
    <%= f.number_field :creator_id %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :location_id %><br />
    <%= f.number_field :location_id %>
	</div
	<%= f.fields_for :thumbnail do |thumbnail_form| %>
		<div>
      <%= thumbnail_form.label :thumbnail %>
      <%= thumbnail_form.file_field :attachment %>
    </div>
  <% end %>
	<%= f.fields_for :pictures do |pictures_form| %>
    <div>
      <%= pictures_form.label :picture %>
      <%= pictures_form.file_field :attachment %>
    </div>
  <% end %>
	<%= f.fields_for :videos do |videos_form| %>
    <div>
      <%= videos_form.label :video %>
      <%= videos_form.file_field :attachment %>
    </div>
	<% end %>
	<%= f.fields_for :documents do |documents_form| %>
    <div>
      <%= documents_form.label :document %>
      <%= documents_form.file_field :attachment %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
