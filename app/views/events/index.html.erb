<div class="row">
  <div class="span12">
    <%= link_to 'Create Event', new_event_path, class: 'btn pull-right' %>
    <h1>My Events</h1>
    <hr>
    <ul class="thumbnails">
      <% @events.each do |event| %>
      <li class="span3">
        <div class="thumbnail">
          <small>
              <strong><%= event.creator.first_name if event.creator %> <%= event.creator.last_name if event.creator %></strong>
          </small>
          <%= link_to "/#{event.url}" do %>
            <%= image_tag event.thumbnail.try("url") %>
            <%= event.name %>
          <% end %>
          <p><%= event.description %></p>
        </div>
      </li>
      <% end %>
      <li class="span3">
        <div class="thumbnail">
          <%= link_to image_tag('http://placehold.it/210&text=Create+an+Event'), new_event_path %>
        </div>
      </li>
    </ul>
  </div>
</div>

